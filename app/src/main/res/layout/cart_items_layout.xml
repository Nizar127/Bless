<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:background="@color/GhostWhite">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cart_prod_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/cart_prod_img"
            tools:ignore="RtlCompat">

        <TextView
            android:id="@+id/cart_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/cart_prod_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Quantity"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_below="@+id/cart_prod_name"/>

        <TextView
            android:id="@+id/cart_prod_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/cart_prod_img"
            android:layout_below="@+id/cart_prod_quan"/>


        </LinearLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>